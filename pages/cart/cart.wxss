/* pages/cart/cart.wxss */
.address{
  text-align: center;
  margin-top: 15rpx;
  border-bottom: 1px solid #ccc;
}
.address-content{
  font-size: 30rpx;
}
.address .address-content .person-info text{
  padding: 0 15rpx;
}
.person-info,.address-info{
  margin-bottom: 15rpx;
}
.item-box{
  padding-bottom: 80rpx;
}
.items{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}
.items:last-child{
  margin-bottom: 0;
}
.check-box{
  flex: 1;
}
.image-box{
  flex: 2;
}
.image-box image{
  width: 80%;
  height: 100%;
}
.info-box{
  flex: 5;
  position: relative;
  padding-left: 20rpx;
}
.title{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.price{
  padding: 10rpx 0;
  font-size: 35rpx;
  color: red;
}
.count{
position: absolute;
right: 30rpx;
bottom: -10rpx;
}
.sub,.add{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
line-height: 50rpx;
  background-color: burlywood;
}
.check-box{
  padding-left: 20rpx;
}
.bottom-tab{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: #fff;
}
.total-price{
  color: red;
  margin-right: 10rpx;
}
.purchase{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 35rpx;
  background-color: #ff0000;
  padding-left: 50rpx;
  
}
.placeHolder{
  text-align: center;
}
.placeHolder .nav-box{
  display: flex;
  justify-content: center;
}
.placeHolder .nav-box navigator{
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  background-color: rgb(233, 215, 215);
}