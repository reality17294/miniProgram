/* pages/good-list/goodList.wxss */
.container{
  margin-top: 145rpx;
}

.first-tab{
  display: flex;
  border-bottom: 1px solid #ccc;
}
.image-box{
  flex: 2;
}
.content-box{
  flex: 3;
  position: relative;
}
.image-box .image{
  width: 100%;
}
.title{
  font-size: 30rpx;
  padding: 15rpx;
}
.price{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: red;
}


.bottomTip{
  text-align: center;
  font-size: 30rpx;
  color: #666;
}